<Window xmlns="https://github.com/avaloniaui" MinWidth="640" MinHeight="500" Title=".NET Core Snow Demo"
        Background="Black">
    <Window.Styles>
        <Style Selector="StackPanel">
            <Setter Property="StackPanel.Opacity" Value="0.2" />
        </Style>
        <Style Selector="StackPanel:pointerover">
            <Setter Property="StackPanel.Opacity" Value="0.9" />
        </Style>
    </Window.Styles>
    
    <Grid>
        <Image Source="{Binding Bitmap}" Stretch="Fill" MinWidth="640" MinHeight="480" />

        <StackPanel Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top" MinWidth="80">
            <Button Content="Reset" Command="{Binding ResetCommand}" />
            <Slider Value="{Binding DelayMsInverted, Mode=TwoWay}" Maximum="{Binding MaxDelay}" />
            <Slider Value="{Binding FlakeCount, Mode=TwoWay}" Minimum="500" Maximum="9000" TickFrequency="1000" />
        </StackPanel>
    </Grid>

    <!-- TODO: Color picker, delay slider, reset button, save image, load background, flake count -->
</Window>